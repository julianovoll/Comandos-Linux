# COPIE A LINHA DE CÓDIGO SEM O NÚMERO E O TRAÇO

INSTALAÇÃO ATUALIZADA 19/11/2022

1 - sudo timedatectl set-timezone America/Sao_Paulo

2 - sudo apt update -y && apt upgrade -y && apt autoremove -y	

3 - sudo apt install build-essential git curl

4 - curl -fsSL https://deb.nodesource.com/setup_16.x | sudo -E bash -

5 - apt-get install -y nodejs git make g++ gcc
	
6 - bash <(curl -sL https://raw.githubusercontent.com/node-red/linux-installers/master/deb/update-nodejs-and-nodered)	

7 - sudo systemctl enable nodered.service
